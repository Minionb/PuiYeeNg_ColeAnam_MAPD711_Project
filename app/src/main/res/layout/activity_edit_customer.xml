<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:gravity="center"
            android:text="Edit Personal Information"
            android:textSize="24sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="189dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="New Password:"
            android:textSize="16sp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/newPassword"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="text"
            android:hint="New Password"
            android:textSize="16sp"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="189dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="New FirstName:"
            android:textSize="16sp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/newFirstName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="text"
            android:hint="New FirstName"
            android:textSize="16sp"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="189dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="New LastName:"
            android:textSize="16sp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/newLastName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="text"
            android:hint="New LastName"
            android:textSize="16sp"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="189dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="New Telephone Number:"
            android:textSize="16sp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/newTelephoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="text"
            android:hint="New Telephone Number"
            android:textSize="16sp"
            android:gravity="center"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="189dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="New Address:"
            android:textSize="16sp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/newAddress"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="text"
            android:hint="New Address"
            android:textSize="16sp"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="189dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="New City:"
            android:textSize="16sp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/newCity"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="text"
            android:hint="New City"
            android:textSize="16sp"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="189dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="New Postal Code:"
            android:textSize="16sp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/newPostalCode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="text"
            android:hint="New Postal Code"
            android:textSize="16sp"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">


        <Button
            android:id="@+id/goBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go Back" />
        <Button
            android:id="@+id/confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Confirm" />

    </LinearLayout>



</LinearLayout>
